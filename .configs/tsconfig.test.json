{
    "extends": "@jasonhk/typescript-config",
    "compilerOptions": {
        "baseUrl": "../",
        "rootDir": "../tests",
        "plugins": [
            { "transform": "typescript-transform-paths" },
            { "transform": "typescript-transform-paths", "afterDeclarations": true },
            { "transform": "ts-nameof", "type": "raw" }
        ],
        "types": [
            "node",
            "mocha",
            "ts-nameof"
        ],
        "paths": {
            "#src/*": ["./src/*"]
        }
    },
    "include": ["../tests/**/*.spec.ts"]
}
